<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.collaboportal.common.oauth2.repository.Oauth2Mapper">
    
    <select id="findUserMasterByEmail" parameterType="String" resultType="com.collaboportal.common.oauth2.entity.DTO.UserMasterCollabo">
        SELECT							
            I_USER_TYPE as userType,
            I_USER_MAIL as userMail,
            I_USER_ID as userId
        FROM
            shohomoto_info.RIYOUSHA_MASTER
        WHERE
            I_USER_MAIL = #{userMail} 					
    </select>
</mapper>