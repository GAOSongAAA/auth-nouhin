<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.collaboportal.common.login.mapper.LoginMapper">

    <select id="findUserByUsername" resultType="com.collaboportal.common.login.model.DTO.UserEPL">
        SELECT
            user_id AS userId,
            username,
            password,
            email
        FROM
            shohomoto_info.users
        WHERE
            username = #{username}
    </select>

</mapper>
