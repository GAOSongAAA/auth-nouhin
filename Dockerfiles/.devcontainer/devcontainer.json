{
  "name": "Nouhin Development - Infra",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "infra-dev", //spnouhin-dev kanjya-dev infra-dev
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-mssql.mssql",
        "eamodio.gitlens",
        "pivotal.vscode-spring-boot",
        "donjayamanne.githistory",
        "vscjava.vscode-maven",
        "mhutchie.git-graph",
        "vscjava.vscode-spring-boot-dashboard",
        "vscjava.vscode-spring-initializr",
        "vscjava.vscode-java-dependency",
        "vscjava.vscode-java-debug"
      ],
      "settings": {
        "java.home": "/usr/lib/jvm/zulu17",
        "maven.executable.path": "/opt/apache-maven-3.9.3/bin/mvn",
        "java.configuration.maven.userSettings": "/root/.m2/settings.xml",
        "java.import.maven.enabled": true,
        "java.maven.downloadSources": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "mssql.connections": [
          {
            "server": "sqlserver",
            "database": "nouhin_db",
            "authenticationType": "SqlLogin",
            "user": "sa",
            "password": "NouhinPass123!",
            "profileName": "納品システム DB - Infra"
          }
        ]
      }
    }
  },
  "forwardPorts": [8081, 1433],
  "portsAttributes": {
    "8081": {
      "label": "Infra API",
      "onAutoForward": "notify"
    },
    "1433": {
      "label": "SQL Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "echo '開發環境準備完了'",
  "remoteUser": "root"
}
